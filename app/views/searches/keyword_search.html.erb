 <%= render "shared/partial" %>

<h2>エリア名を入力</h2>
<%= form_tag('/search', method: :get) do %>
  <%= text_field_tag :search, nil, placeholder: 'エリア名を入力' %>
  <%= submit_tag 'エリア検索', name: nil %>
<% end %>

<%= form_tag('/keyword_search', method: :get) do %>
  <%= text_field_tag :keyword_search, nil, placeholder: 'キーワード名を入力' %>
  <%= submit_tag 'キーワード検索', name: nil %>
<% end %>

<span><%= @rooms.count %>件見つかりました。</span>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>住所</th>
      <th>施設詳細</th>
      <th>宿泊料金（／日）</th>
      <th></th>
    </tr>
  </thead>

  <% @rooms.each do |f| %>
  <tbody>
    <td>
          <% if f.room_image.present? %>
            <img src=<%= f.room_image %> class = "room_image">
          <% else %>
            <img src=/default-room_image.png class = "room_image">
          <% end %>
    </td>
    <td><%= f.room_name %></td>
    <td><%= f.room_address %></td>
    <td><%= f.room_content %></td>
    <td><%= f.room_price_day %></td>
    <td><%= link_to "詳細はこちら", f %></td>
  </tbody>
  <% end %>
</table>

