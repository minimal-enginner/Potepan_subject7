 <%= render "shared/partial" %>

<h1>プロフィール編集</h1>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<table>
    <tr>
      <th><%= f.label :image ,"アイコン画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>

    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :profile ,"自己紹介" %></th>
      <td><%= f.text_field :profile %></td>
    </tr>
</table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する"%></li>
      <li><%= link_to "キャンセル", :back %></li>
    </ul>
  </div>


 <% if flash[:notice_no_update] %>
   <p class="notice"><%= flash[:notice_no_update] %></p>
 <% end %>

 <%= render "shared/error", obj: @user %> 
<% end %>